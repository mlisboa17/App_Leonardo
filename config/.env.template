# CONFIGURAÇÕES DA BINANCE (PRODUÇÃO) - substitua pelos valores reais no seu ambiente local
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# CONFIGURAÇÕES DE OPERAÇÃO
INITIAL_BALANCE=2000.00
MAX_EXPOSURE_PER_TRADE_PCT=0.02
DAILY_STOP_LOSS_PCT=0.015
EMA_PERIOD=200
TAKE_PROFIT_SCALPING=0.012
CLOSE_HOUR_BRT=23:59

# TELEGRAM
USE_TELEGRAM=True
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
